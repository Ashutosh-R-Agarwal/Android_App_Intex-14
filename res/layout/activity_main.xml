<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" 
    android:orientation="vertical"
    android:background="@drawable/backg" >
    
   
        
       
    
    <ImageButton
        android:id="@+id/imageButton6"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton5"
        android:layout_below="@+id/imageButton5"
        android:layout_marginTop="32dp"
        android:background="@drawable/events" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton6"
        android:background="@drawable/about" />

    <ImageButton
        android:id="@+id/imageButton3"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_below="@+id/imageButton6"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:background="@drawable/register" />

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="18dp"
        android:gravity="left"
        android:text="www.intexication.org"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageButton3"
        android:src="@drawable/logo" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_above="@+id/imageButton6"
        android:layout_alignLeft="@+id/imageView1"
        android:background="@drawable/cont" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="120dp"
        android:layout_height="40dp"
       android:layout_alignParentRight="true"
        android:layout_below="@+id/imageButton33"
        android:layout_marginTop="26dp"
        android:background="@drawable/updates" />

    <ImageButton
        android:id="@+id/imageButton33"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/imageButton5"
        android:layout_margin="5dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/fb" /> 

    

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_alignLeft="@+id/imageButton33"
        android:background="@drawable/twit" />

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/imageButton2"
        android:layout_alignTop="@+id/imageButton23"
        android:background="@drawable/bk1" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="37dp"
        android:layout_height="37dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_marginRight="14dp"
        android:layout_toLeftOf="@+id/imageButton33"
        android:background="@drawable/fbw" />

</RelativeLayout>
    
    
    
    
    
    
    
    
    
    
    
    
    

